<% if (success && success.length) { %>
    <div class="p-4 relative max-w-3xl mx-auto text-sm rounded-base bg-red-soft border border-slate-700" role="alert">
        <span class="font-medium">
            <%= success %>
        </span>

        <button class=" p-1 absolute top-0 bottom-0 right-0 transition-all rounded hover:bg-blue-200" type="button">
            <svg class="h-6 w-6 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>

    <% } %>

    <% if (error && error.length) { %>
    <div class="p-4 relative max-w-3xl mx-auto text-sm rounded-base bg-red-soft border border-slate-700" role="alert">
        <span class="font-medium">
            <%= error %>
        </span>

        <button class=" p-1 absolute top-0 bottom-0 right-0 transition-all rounded hover:bg-blue-200" type="button">
            <svg class="h-6 w-6 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>

    <% } %>