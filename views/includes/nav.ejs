<nav class="bg-clr fixed w-full z-20 top-0 start-0 border-b border-default">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="/listings" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="/logo.png" class="h-7" alt="Flowbite Logo">
    </a>
    <!-- burger menu btn -->
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <button data-collapse-toggle="navbar-sticky" type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-body rounded-base hover:bg-neutral-secondary-soft hover:text-heading focus:outline-none focus:ring-2 focus:ring-neutral-tertiary"
        aria-controls="navbar-sticky" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="w-6 h-6 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
          fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 7h14M5 12h14M5 17h14" />
        </svg>
      </button>
    </div>
    <div class="items-center justify-between  hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
      <div class="siteOption ml-auto">
        <ul
          class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-default rounded-base bg-neutral-secondary-soft md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-neutral-primary">
          <li>
            <a href="/" class="block py-2 px-3 text-white bg-brand rounded-sm md:bg-transparent md:text-fg-brand md:p-0"
              aria-current="page">Home</a>
          </li>
          <li>
            <a href="listings"
              class="block py-2 px-3 text-white bg-brand rounded hover:bg-neutral-tertiary md:hover:bg-transparent md:border-0 md:hover:text-fg-brand md:p-0 md:dark:hover:bg-transparent">All
              Listings</a>
          </li>
          <li>
            <a href="/listings/new"
              class="block py-2 px-3 text-white bg-brand rounded hover:bg-neutral-tertiary md:hover:bg-transparent md:border-0 md:hover:text-fg-brand md:p-0 md:dark:hover:bg-transparent">Add
              New Listings</a>
          </li>

        </ul>
      </div>
      <div class="userOption ">
        <ul
          class="flex justify-end  p-4 md:p-0 mt-4 font-medium border border-default rounded-base bg-neutral-secondary-soft md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-neutral-primary">
          <% if (!currUser) { %>
            <li>
              <a href="/signup"
                class="block py-2 px-3 text-white bg-brand rounded hover:bg-neutral-tertiary md:hover:bg-transparent md:border-0 md:hover:text-fg-brand md:p-0 md:dark:hover:bg-transparent">Sign
                Up</a>
            </li>
            <li>
              <a href="login"
                class="block py-2 px-3 text-white bg-brand rounded hover:bg-neutral-tertiary md:hover:bg-transparent md:border-0 md:hover:text-fg-brand md:p-0 md:dark:hover:bg-transparent">Login</a>
            </li>
            <% } %>
              <% if (currUser) { %>
                <li>
                  <a href="logout"
                    class="block py-2 px-3 text-white bg-brand rounded hover:bg-neutral-tertiary md:hover:bg-transparent md:border-0 md:hover:text-fg-brand md:p-0 md:dark:hover:bg-transparent">Logout</a>
                </li>
                <% } %>
        </ul>
      </div>

    </div>
  </div>
</nav>
<script>
  // find the button that controls the menu
  const menuButton = document.querySelector('button[aria-controls="navbar-sticky"]');
  const menu = document.getElementById('navbar-sticky');

  if (menuButton && menu) {
    menuButton.addEventListener('click', () => {
      const isOpen = !menu.classList.contains('hidden');

      // toggle visibility (Tailwind 'hidden' class)
      menu.classList.toggle('hidden');

      // update aria-expanded
      menuButton.setAttribute('aria-expanded', String(!isOpen));

      // optional: update sr-only text or toggle an 'open' class for animation
      const sr = menuButton.querySelector('.sr-only');
      if (sr) sr.textContent = isOpen ? 'Open main menu' : 'Close main menu';
    });
  }
</script>